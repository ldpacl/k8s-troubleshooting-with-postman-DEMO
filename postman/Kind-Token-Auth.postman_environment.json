{
	"id": "kind-token-auth-env-2024",
	"name": "Kind-Token-Auth",
	"values": [
		{
			"key": "base_url",
			"value": "https://127.0.0.1:6443",
			"type": "default",
			"enabled": true,
			"description": "Direct API server URL. Get from: kubectl cluster-info"
		},
		{
			"key": "bearer_token",
			"value": "YOUR_TOKEN_HERE",
			"type": "secret",
			"enabled": true,
			"description": "Service account token. Get from: kubectl create token default --duration=24h"
		},
		{
			"key": "namespace",
			"value": "demo",
			"type": "default",
			"enabled": true,
			"description": "Target namespace (change this to scan different namespaces)"
		},
		{
			"key": "pod_name",
			"value": "",
			"type": "default",
			"enabled": true,
			"description": "Pod name for logs/events requests"
		},
		{
			"key": "previous",
			"value": "false",
			"type": "default",
			"enabled": true,
			"description": "Set to 'true' for crashed container logs"
		},
		{
			"key": "container_name",
			"value": "",
			"type": "default",
			"enabled": true,
			"description": "Container name for multi-container pods"
		}
	],
	"_postman_variable_scope": "environment"
}
