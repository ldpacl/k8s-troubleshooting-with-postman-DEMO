							"// ============================================================",
							"// KUBERNETES POD DIAGNOSTICS - COMPREHENSIVE ANALYSIS",
							"// ============================================================",
							"// This script analyzes all pods in the namespace and provides:",
							"// - List of healthy pods",
							"// - List of unhealthy pods with specific issues",
							"// - Container-level details for each problem",
							"// - Summary statistics",
							"// ============================================================",
							"",
							"const response = pm.response.json();",
							"const namespace = pm.variables.get('namespace');",
							"",
							"// Validate response",
							"pm.test('API request successful', function() {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response contains pods', function() {",
							"    pm.expect(response).to.have.property('items');",
							"});",
							"",
							"const pods = response.items;",
							"",
							"// Data structures for results",
							"const healthyPods = [];",
							"const unhealthyPods = [];",
							"const issueTypes = {};",
							"",
							"// ============================================================",
							"// ANALYZE EACH POD",
							"// ============================================================",
							"",
							"pods.forEach(pod => {",
							"    const podName = pod.metadata.name;",
							"    const phase = pod.status.phase;",
							"    const containerStatuses = pod.status.containerStatuses || [];",
							"    const initContainerStatuses = pod.status.initContainerStatuses || [];",
							"    const conditions = pod.status.conditions || [];",
							"    ",
							"    let isHealthy = true;",
							"    let issues = [];",
							"    let containerIssues = [];",
							"    ",
							"    // ----------------------------------------------------------",
							"    // Check 1: Pod Phase",
							"    // ----------------------------------------------------------",
							"    if (phase === 'Pending') {",
							"        isHealthy = false;",
							"        const scheduleCondition = conditions.find(c => c.type === 'PodScheduled');",
							"        if (scheduleCondition && scheduleCondition.status === 'False') {",
							"            issues.push({",
							"                type: 'Pending',",
							"                reason: scheduleCondition.reason || 'Unknown',",
							"                message: scheduleCondition.message || 'Pod cannot be scheduled'",
							"            });",
							"        } else {",
							"            issues.push({",
							"                type: 'Pending',",
							"                reason: 'WaitingForResources',",
							"                message: 'Pod is waiting to be scheduled'",
							"            });",
							"        }",
							"    } else if (phase === 'Failed') {",
							"        isHealthy = false;",
							"        issues.push({",
							"            type: 'Failed',",
							"            reason: pod.status.reason || 'Unknown',",
							"            message: pod.status.message || 'Pod has failed'",
							"        });",
							"    }",
							"    ",
							"    // ----------------------------------------------------------",
							"    // Check 2: Container Statuses",
							"    // ----------------------------------------------------------",
							"    containerStatuses.forEach(cs => {",
							"        const containerName = cs.name;",
							"        const restartCount = cs.restartCount || 0;",
							"        ",
							"        // Container in Waiting state",
							"        if (cs.state && cs.state.waiting) {",
							"            isHealthy = false;",
							"            const waiting = cs.state.waiting;",
							"            containerIssues.push({",
							"                container: containerName,",
							"                state: 'Waiting',",
							"                reason: waiting.reason || 'Unknown',",
							"                message: waiting.message || '',",
							"                restartCount: restartCount",
							"            });",
							"            ",
							"            // Track issue types",
							"            const issueType = waiting.reason || 'Unknown';",
							"            issueTypes[issueType] = (issueTypes[issueType] || 0) + 1;",
							"        }",
							"        ",
							"        // Container in Terminated state (and not successful)",
							"        if (cs.state && cs.state.terminated) {",
							"            const terminated = cs.state.terminated;",
							"            if (terminated.exitCode !== 0) {",
							"                isHealthy = false;",
							"                containerIssues.push({",
							"                    container: containerName,",
							"                    state: 'Terminated',",
							"                    reason: terminated.reason || 'Error',",
							"                    exitCode: terminated.exitCode,",
							"                    message: terminated.message || '',",
							"                    restartCount: restartCount",
							"                });",
							"                issueTypes['Terminated'] = (issueTypes['Terminated'] || 0) + 1;",
							"            }",
							"        }",
							"        ",
							"        // Container running but not ready",
							"        if (cs.state && cs.state.running && !cs.ready) {",
							"            isHealthy = false;",
							"            containerIssues.push({",
							"                container: containerName,",
							"                state: 'NotReady',",
							"                reason: 'ContainerNotReady',",
							"                message: 'Container is running but not passing readiness checks',",
							"                restartCount: restartCount",
							"            });",
							"            issueTypes['NotReady'] = (issueTypes['NotReady'] || 0) + 1;",
							"        }",
							"        ",
							"        // High restart count warning",
							"        if (restartCount > 5 && cs.ready) {",
							"            containerIssues.push({",
							"                container: containerName,",
							"                state: 'Warning',",
							"                reason: 'HighRestartCount',",
							"                message: `Container has restarted ${restartCount} times`,",
							"                restartCount: restartCount",
							"            });",
							"        }",
							"    });",
							"    ",
							"    // ----------------------------------------------------------",
							"    // Check 3: Init Container Statuses",
							"    // ----------------------------------------------------------",
							"    initContainerStatuses.forEach(cs => {",
							"        const containerName = cs.name + ' (init)';",
							"        ",
							"        if (cs.state && cs.state.waiting) {",
							"            isHealthy = false;",
							"            const waiting = cs.state.waiting;",
							"            containerIssues.push({",
							"                container: containerName,",
							"                state: 'Waiting',",
							"                reason: waiting.reason || 'Unknown',",
							"                message: waiting.message || '',",
							"                restartCount: cs.restartCount || 0",
							"            });",
							"        }",
							"        ",
							"        if (cs.state && cs.state.terminated && cs.state.terminated.exitCode !== 0) {",
							"            isHealthy = false;",
							"            const terminated = cs.state.terminated;",
							"            containerIssues.push({",
							"                container: containerName,",
							"                state: 'Terminated',",
							"                reason: terminated.reason || 'Error',",
							"                exitCode: terminated.exitCode,",
							"                message: terminated.message || '',",
							"                restartCount: cs.restartCount || 0",
							"            });",
							"        }",
							"    });",
							"    ",
							"    // ----------------------------------------------------------",
							"    // Categorize Pod",
							"    // ----------------------------------------------------------",
							"    if (isHealthy) {",
							"        healthyPods.push({",
							"            name: podName,",
							"            phase: phase,",
							"            containers: containerStatuses.map(c => c.name)",
							"        });",
							"    } else {",
							"        unhealthyPods.push({",
							"            name: podName,",
							"            phase: phase,",
							"            issues: issues,",
							"            containerIssues: containerIssues",
							"        });",
							"    }",
							"});",
